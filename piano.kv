#:kivy 2.3.0

<TitleScreen>:
    name: 'title'
    canvas.before:
        Color: 
            rgba: 1, 1, 1, 1 #color of background
        Rectangle:
            source:'source/title.jpg'
            pos: self.pos
            size: self.size
    Button:
        background_color: 0, 0, 0, 0
        size_hint: None, .1
        width: self.height * 3.5
        pos_hint: {'center_x': .3, 'center_y': .5}
        markup: True
        text: '[b]Play[/b]'
        font_size: 80
        color: (0, 0, 0, 1)
        on_release: root.manager.start_app()
        canvas.before:
            Color:
                rgba: (255, 255, 255, 0.9)
            RoundedRectangle:
                size: self.size
                pos: self.pos
                radius: [20, 20] 

<GameScreen>:
    name: 'piano'
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1 # your color here
        Rectangle:
            source: "source/game_background_2.jpeg"
            pos: self.pos
            size: self.size
    